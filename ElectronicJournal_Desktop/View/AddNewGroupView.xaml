<UserControl x:Class="ElectronicJournal_Desktop.View.AddNewGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectronicJournal_Desktop.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="Text">
            <Setter Property="Control.FontSize" Value="18"/>
            <Setter Property="Control.Margin" Value="5" />
            <Setter Property="Control.Padding" Value="3"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Назад"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Command="{Binding GoBackCommand}"/>
            <Label Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Content="Добавление новой группы"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="26"/>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="5"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                   
                </Grid.RowDefinitions>

                <Label Content="Наименование группы"
                       Style="{StaticResource Text}"/>
                <Label Grid.Row="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Content="*"
                       FontSize="22"
                       ToolTip="Обязательно для заполнения"/>
                <TextBox Grid.Column="1"
                         Style="{StaticResource Text}"
                         Text="{Binding Path=GroupName, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="1"
                       Content="Дата формирование"
                       Style="{StaticResource Text}"/>
                <Label Grid.Row="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Content="*"
                       FontSize="22"
                       ToolTip="Обязательно для заполнения"/>
                <DatePicker Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource Text}"
                            SelectedDateFormat="Short"
                            SelectedDate="{Binding DateFormation, UpdateSourceTrigger=PropertyChanged}"
                            IsDropDownOpen="True">
                </DatePicker>


            </Grid>
        </ScrollViewer>
        <Button Content="Добавить"
                Grid.Row="2"
                Margin="5"
                Padding="5"
                FontSize="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Command="{Binding AddGroupCommand}"/>
    </Grid>
</UserControl>
